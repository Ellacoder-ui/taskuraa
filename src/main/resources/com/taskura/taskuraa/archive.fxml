<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane prefHeight="700" prefWidth="1150" style="-fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; -fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Top Purple Header -->
    <HBox layoutX="0" layoutY="0" prefHeight="62" prefWidth="1150" style="-fx-background-color: #3a2a4a; -fx-alignment: center-left;">
        <Region prefWidth="20" />
        <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-letter-spacing: 3px;" text="TASKURA" />
    </HBox>

    <!-- Left Sidebar -->
    <VBox layoutX="0" layoutY="62" prefHeight="638" prefWidth="220" style="-fx-background-color: transparent; -fx-padding: 20 14 20 14;">
        <!-- Profile Card -->
        <HBox spacing="10" style="-fx-alignment: center-left; -fx-padding: 6 2 20 2;">
            <StackPane prefHeight="48" prefWidth="48">
                <Circle fill="#ffd36b" radius="22" />
                <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="MT" />
            </StackPane>
            <VBox spacing="2">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #333333;" text="Mike T." />
                <Label style="-fx-font-size: 11px; -fx-text-fill: #8a8a8a;" text="Student" />
            </VBox>
        </HBox>

        <!-- Sidebar navigation -->
        <VBox spacing="12" style="-fx-padding: 10 4 10 4;">
            <!-- Home -->
            <HBox spacing="10" style="-fx-alignment: center-left; -fx-padding: 8 6 8 6; -fx-background-color: #f4f4f8; -fx-border-radius: 8; -fx-background-radius: 8;">
                <StackPane prefHeight="28" prefWidth="28">
                    <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@home.png" />
                        </image>
                    </ImageView>
                </StackPane>
                <Label style="-fx-text-fill: #3b3b3b; -fx-font-weight: 600;" text="Home" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Calendar -->
            <HBox spacing="10" style="-fx-alignment: center-left; -fx-padding: 6 6 6 6;">
                <StackPane prefHeight="28" prefWidth="28">
                    <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@calendar.png" />
                        </image>
                    </ImageView>
                </StackPane>
                <Label style="-fx-text-fill: #6d6d6d;" text="Calendar" />
            </HBox>

            <!-- Tasks -->
            <HBox spacing="10" style="-fx-alignment: center-left; -fx-padding: 6 6 6 6;">
                <StackPane prefHeight="28" prefWidth="28">
                    <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@task.png" />
                        </image>
                    </ImageView>
                </StackPane>
                <Label style="-fx-text-fill: #6d6d6d;" text="Tasks" />
            </HBox>

            <!-- Settings -->
            <HBox spacing="10" style="-fx-alignment: center-left; -fx-padding: 6 6 6 6;">
                <StackPane prefHeight="28" prefWidth="28">
                    <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@settings.png" />
                        </image>
                    </ImageView>
                </StackPane>
                <Label style="-fx-text-fill: #6d6d6d;" text="Settings" />
            </HBox>
        </VBox>

        <Region VBox.vgrow="ALWAYS" />

        <!-- Add button at bottom -->
        <StackPane style="-fx-alignment: center-left; -fx-padding: 10 0 4 6;">
            <Button style="-fx-background-color:#ff6b6b; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 20; -fx-min-width:36; -fx-min-height:36; -fx-cursor: hand;" text="＋" />
            <Label layoutX="52" layoutY="8" style="-fx-text-fill: #b3b3b3; -fx-font-size: 11px;" text="Add more tasks" />
        </StackPane>
    </VBox>

    <!-- Main Center Content Pane -->
    <AnchorPane layoutX="220" layoutY="62" prefHeight="638" prefWidth="690" style="-fx-padding: 30 30 30 30;">
        <VBox layoutX="0" layoutY="0" prefWidth="690" spacing="18">
            <!-- Date -->
            <Label style="-fx-text-fill: #202020; -fx-font-weight: 700; -fx-font-size: 16px;" text="15 October 2020" />

            <!-- Title row -->
            <HBox spacing="10" style="-fx-alignment: center-left;">
                <Label style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #1f1f1f;" text="Weekly Tasks Archive" />
                <Region HBox.hgrow="ALWAYS" />
                <Button style="-fx-background-color: transparent; -fx-border-color: #e0e0e6; -fx-border-radius: 12; -fx-background-radius: 12; -fx-padding: 6 12 6 12; -fx-text-fill: #666666;" text="Return" />
            </HBox>

            <!-- Search -->
            <TextField promptText="Search tasks" style="-fx-background-color: transparent; -fx-border-color: #e6e6e9; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 10 8 10; -fx-prompt-text-fill: #b6b6b6;" />

            <!-- Task Card -->
            <HBox spacing="12" style="-fx-padding: 12; -fx-background-color: #efefef; -fx-background-radius: 10; -fx-border-radius: 10; -fx-alignment: center-left;">
                <!-- left star box -->
                <StackPane style="-fx-pref-width:48; -fx-pref-height:48; -fx-alignment:center;">
                    <Rectangle arcHeight="10" arcWidth="10" height="44" style="-fx-fill: white;" width="44" />
                    <Label style="-fx-text-fill: #73c2d6; -fx-font-size: 18px; -fx-font-weight: bold;" text="★" />
                </StackPane>

                <!-- title & subtitle -->
                <VBox spacing="2" style="-fx-alignment: center-left;">
                    <Label style="-fx-font-weight: 700; -fx-text-fill:#2c2c2c; -fx-font-size: 14px;" text="Activity 2" />
                    <Label style="-fx-text-fill: #8a8a8a; -fx-font-size: 12px;" text="ojhdfilsufihwjsyhf" />
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <!-- exclamation badge -->
                <StackPane style="-fx-pref-width:36; -fx-pref-height:36; -fx-alignment:center;" />

                <!-- delete icon -->
                <StackPane style="-fx-pref-width:36; -fx-pref-height:36; -fx-alignment:center;">
                    <Rectangle arcHeight="3" arcWidth="3" height="18" style="-fx-fill: #c7c7c7;" width="14" />
                </StackPane>
            </HBox>

            <Region VBox.vgrow="ALWAYS" />
        </VBox>
    </AnchorPane>

    <!-- Right Detail Panel -->
    <VBox layoutX="910" layoutY="62" prefHeight="638" prefWidth="240" style="-fx-background-color: #f6f6f6; -fx-padding: 28 20 28 20;">
        <Label style="-fx-font-size:20px; -fx-font-weight:700; -fx-text-fill: #222222; -fx-padding: 0 0 12 0;" text="Activity 2" />
        <Separator />
        <Label style="-fx-text-fill: #9a9a9a; -fx-padding: 18 0 6 0; -fx-font-weight: 600;" text="Deadline:" />
        <Label style="-fx-text-fill: #222222; -fx-font-size: 13px;" text="Text preview only" wrapText="true" />
        <Region VBox.vgrow="ALWAYS" />
    </VBox>

</AnchorPane>
