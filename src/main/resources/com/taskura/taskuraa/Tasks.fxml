<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskura.taskuraa.TasksController"
            style="-fx-background-color: #F8F8F8;">

    <!-- LEFT: Sidebar -->
    <left>
        <VBox prefWidth="250" style="-fx-background-color: white;" spacing="30" VBox.vgrow="ALWAYS">

            <VBox alignment="CENTER" prefWidth="180" spacing="5">
                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                <Label fx:id="nameLabel"
                       style="-fx-font-weight: bold; -fx-font-size: 15;"
                       text="User Name"
                       wrapText="true"
                       maxWidth="160">
                    <graphic>
                        <Circle fill="#320a48" radius="30.0" stroke="BLACK" strokeType="INSIDE"/>
                    </graphic>
                </Label>
            </VBox>

            <VBox spacing="30" style="-fx-border-color: #EEEEEE; -fx-border-width: 0 0 1 0;" VBox.vgrow="ALWAYS">
                <padding><Insets bottom="10" top="10"/></padding>

                <Button fx:id="homeButton"
                        alignment="CENTER_LEFT"
                        prefHeight="60"
                        prefWidth="250"
                        style="-fx-background-color: transparent; -fx-font-size: 20px;"
                        text="Home">
                    <graphic>
                        <ImageView fitHeight="30" fitWidth="30">
                            <image><Image url="@home.png"/></image>
                        </ImageView>
                    </graphic>
                    <padding><Insets left="20"/></padding>
                </Button>

                <Button fx:id="tasksButton"
                        alignment="CENTER_LEFT"
                        prefHeight="60"
                        prefWidth="250"
                        style="-fx-background-color: transparent; -fx-font-size: 20px;"
                        text="Tasks">
                    <graphic>
                        <ImageView fitHeight="30" fitWidth="30">
                            <image><Image url="@tasks.png"/></image>
                        </ImageView>
                    </graphic>
                    <padding><Insets left="20"/></padding>
                </Button>
            </VBox>

        </VBox>
    </left>

    <!-- TOP: Header -->
    <top>
        <HBox alignment="CENTER" spacing="25" style="-fx-background-color: #3f2d56; -fx-padding: 20;">
            <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;" text="TASKURA" />
        </HBox>
    </top>

    <!-- CENTER: Scrollable Task List -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-background-color: white;">
                <padding><Insets bottom="20" left="30" right="30" top="20" /></padding>

                <!-- DATE ROW -->
                <HBox alignment="CENTER_LEFT">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="15 October 2020" />
                    <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS" />
                </HBox>

                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Weekly Tasks" />

                <!-- ACTION BUTTONS -->
                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <Button fx:id="archiveButton"
                            text="Archive"
                            textFill="black"
                            prefWidth="100"
                            prefHeight="30"
                            style="-fx-background-color: #CCCCCC; -fx-background-radius: 5; -fx-font-size: 15px" />

                    <Button fx:id="newButton"
                            text="+ New"
                            textFill="white"
                            prefWidth="100"
                            prefHeight="30"
                            style="-fx-background-color: #3C2A52; -fx-background-radius: 5; -fx-font-size: 15px" />
                </HBox>

                <!-- SEARCH -->
                <TextField fx:id="searchTasksField" promptText="Search tasks" />

                <!-- TASK LIST -->
                <VBox fx:id="taskListContainer" spacing="10" />
            </VBox>
        </ScrollPane>
    </center>

    <!-- RIGHT: Fixed-width Details Panel -->
    <right>
        <VBox alignment="TOP_CENTER" spacing="10" prefWidth="350" maxWidth="350" style="-fx-background-color: white; -fx-padding: 20;">
            <Label fx:id="activityTitleLabel" text="Details" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <ScrollPane fitToWidth="true" fitToHeight="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
                <TextArea fx:id="deadlineLabel" prefHeight="500" editable="false" wrapText="true"/>
            </ScrollPane>
        </VBox>
    </right>

</BorderPane>