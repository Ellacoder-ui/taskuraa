<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="660" prefWidth="1018" style="-fx-background-color: white; -fx-font-family: 'Poppins'; -fx-font-size: 13px;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskura.taskuraa.DashboardController">

    <!-- ======= TOP HEADER ======= -->
    <top>
        <HBox alignment="CENTER" prefHeight="50" style="-fx-background-color: #3D216B;">
            <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 22;" text="TASKURA" />
        </HBox>
    </top>

    <!-- ======= LEFT SIDEBAR ======= -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="180" spacing="20" style="-fx-background-color: #ffffff; -fx-border-color: #eeeeee;">
            <VBox alignment="CENTER" prefHeight="50.0" prefWidth="50.0" spacing="5">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Mike T.">
                    <graphic>
                        <Circle fill="#320a48" radius="30.0" stroke="BLACK" strokeType="INSIDE" />
                    </graphic>
                </Label>
                <Label style="-fx-text-fill: #666;" text="Student">
                    <VBox.margin>
                        <Insets bottom="-10.0" left="60.0" />
                    </VBox.margin>
                    <padding>
                        <Insets top="-40.0" />
                    </padding>
                </Label>
            </VBox>

            <VBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Button alignment="TOP_LEFT" prefWidth="160" style="-fx-background-color: transparent; -fx-text-fill: #555; -fx-cursor: hand;" text="Home">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@home.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="CalendarBtn" alignment="TOP_LEFT" prefWidth="160" style="-fx-background-color: #f3f3f3; -fx-text-fill: #333; -fx-font-weight: bold;" text="Calendar">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@calendar.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" prefWidth="160" style="-fx-background-color: transparent; -fx-text-fill: #555; -fx-cursor: hand;" text="Tasks">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@tasks.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" prefWidth="160" style="-fx-background-color: transparent; -fx-text-fill: #555; -fx-cursor: hand;" text="Settings">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@settings.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- ======= CENTER CONTENT ======= -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <content>
                <VBox spacing="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <!-- ⭐ This VBox receives the date boxes from Calendar -->
                    <VBox fx:id="dateContainer" spacing="10" />

                    <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="15 October 2020" />
                    <TextArea prefHeight="104.0" prefWidth="518.0" text="Org Meeting" />

                    <VBox spacing="15" />
                    <TextArea layoutX="30.0" layoutY="77.0" prefHeight="104.0" prefWidth="518.0" text="Org Meeting" />

                    <!-- Schedule Section -->
                    <VBox spacing="10">
                        <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Schedule" />
                        <TextField promptText="Search Schedule, holidays and appointments" style="-fx-background-radius: 10; -fx-border-color: #ddd;" />

                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label style="-fx-font-size: 18; -fx-text-fill: #333;" text="★" />
                            <VBox>
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Org Meeting" />
                                <Label style="-fx-text-fill: #777;" text="Date, time and etc" />
                            </VBox>
                        </HBox>
                    </VBox>

                    <Button fx:id="newButton" style="-fx-background-color: #3D216B; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 5 15;" text="+ New" />
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- ======= RIGHT APPOINTMENTS PANEL ======= -->
    <right>
        <VBox alignment="TOP_CENTER" prefWidth="280" spacing="20" style="-fx-background-color: #ffffff; -fx-border-color: #eeeeee;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Appointment List -->
            <VBox spacing="15">
                <VBox />

                <VBox />

                <VBox />
            </VBox>
        </VBox>
    </right>

</BorderPane>
