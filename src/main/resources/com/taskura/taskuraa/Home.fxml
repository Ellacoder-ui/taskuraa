<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskura.taskuraa.HomeController">

    <!-- LEFT: Sidebar -->
    <left>
        <VBox prefWidth="250" style="-fx-background-color: white;" spacing="30" VBox.vgrow="ALWAYS">

            <VBox alignment="CENTER" prefWidth="180" spacing="5">
                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                <Label fx:id="nameLabel"
                       style="-fx-font-weight: bold; -fx-font-size: 15;"
                       text="User Name"
                       wrapText="true"
                       maxWidth="160">
                    <graphic>
                        <Circle fill="#320a48" radius="30.0" stroke="BLACK" strokeType="INSIDE"/>
                    </graphic>
                </Label>
            </VBox>

            <VBox spacing="30" style="-fx-border-color: #EEEEEE; -fx-border-width: 0 0 1 0;" VBox.vgrow="ALWAYS">
                <padding><Insets bottom="10" top="10"/></padding>

                <Button fx:id="homeButton"
                        alignment="CENTER_LEFT"
                        prefHeight="60"
                        prefWidth="250"
                        style="-fx-background-color: transparent; -fx-font-size: 20px;"
                        text="Home">
                    <graphic>
                        <ImageView fitHeight="30" fitWidth="30">
                            <image><Image url="@home.png"/></image>
                        </ImageView>
                    </graphic>
                    <padding><Insets left="20"/></padding>
                </Button>

                <Button fx:id="tasksButton"
                        alignment="CENTER_LEFT"
                        prefHeight="60"
                        prefWidth="250"
                        style="-fx-background-color: transparent; -fx-font-size: 20px;"
                        text="Tasks">
                    <graphic>
                        <ImageView fitHeight="30" fitWidth="30">
                            <image><Image url="@tasks.png"/></image>
                        </ImageView>
                    </graphic>
                    <padding><Insets left="20"/></padding>
                </Button>
            </VBox>

        </VBox>
    </left>

    <!-- TOP: Header -->
    <top>
        <HBox alignment="CENTER" spacing="25" style="-fx-background-color: #3f2d56; -fx-padding: 20;">
            <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;" text="TASKURA" />
        </HBox>
    </top>

    <!-- CENTER: Home content -->
    <center>
        <VBox spacing="25" style="-fx-padding: 25;">
            <Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="Welcome to Taskura!" />
            <HBox spacing="20">
                <VBox style="-fx-background-color: #AEE2FF; -fx-padding: 25; -fx-background-radius: 10;">
                    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Finish your tasks today" wrapText="true" />
                </VBox>
                <VBox style="-fx-background-color: #B8A9C9; -fx-padding: 25; -fx-background-radius: 10;">
                    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Finish Activity 1 today!" wrapText="true" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label style="-fx-font-size: 22;" text="★" />
                <VBox>
                    <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Activity 1" />
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14;" text="ojhdfilusuhfliwsyhf" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label style="-fx-font-size: 22;" text="⬣" />
                <VBox>
                    <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Developing" />
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14;" text="afsfsfgrfsefrsfrsef" />
                </VBox>
            </HBox>
        </VBox>
    </center>

</BorderPane>