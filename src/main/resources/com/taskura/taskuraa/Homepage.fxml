<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane prefHeight="700" prefWidth="1200" style="-fx-background-color: #fafafa;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Left Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="25" style="-fx-background-color: #ffffff; -fx-padding: 25;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Circle fill="#d9d9d9" radius="30" />
                <VBox>
                    <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Mike T." />
                    <Label style="-fx-text-fill: #888; -fx-font-size: 14;" text="Student" />
                </VBox>
            </HBox>

            <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 50 0 0 0;">
                <Button prefWidth="160" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 16; -fx-alignment: CENTER_LEFT;">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <image>
                                <Image url="@home.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <text>Home</text>
                </Button>
                <Button prefWidth="160" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 16; -fx-alignment: CENTER_LEFT;">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <image>
                                <Image url="@calendar.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <text>Calendar</text>
                </Button>
                <Button prefWidth="160" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 16; -fx-alignment: CENTER_LEFT;">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <image>
                                <Image url="@tasks.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <text>Tasks</text>
                </Button>
                <Button prefWidth="160" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 16; -fx-alignment: CENTER_LEFT;">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <image>
                                <Image url="@settings.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <text>Settings</text>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER" spacing="25" style="-fx-background-color: #3f2d56; -fx-padding: 20;">
            <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;" text="TASKURA" />
        </HBox>
    </top>

    <!-- Main Center Content -->
    <center>
        <VBox spacing="25" style="-fx-padding: 25;">
            <!-- Date -->
            <Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="15 October 2020" />

            <!-- Highlighted Tasks -->
            <HBox spacing="20">
                <VBox style="-fx-background-color: #AEE2FF; -fx-padding: 25; -fx-background-radius: 10;">
                    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Finish your tasks today" wrapText="true" />
                </VBox>
                <VBox style="-fx-background-color: #B8A9C9; -fx-padding: 25; -fx-background-radius: 10;">
                    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Finish Activity 1 today!" wrapText="true" />
                </VBox>
            </HBox>

            <!-- Weekly Tasks Header with Buttons -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-font-weight: bold; -fx-font-size: 24;" text="Weekly Tasks" />
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="10">
                    <Button text="Archive"
                            style="-fx-background-color: #cccccc; -fx-text-fill: black; -fx-background-radius: 5; -fx-font-size: 18; -fx-padding: 5 14;" />
                    <Button text="New"
                            style="-fx-background-color: #5C3B8C; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 18; -fx-padding: 5 14;" />
                </HBox>
            </HBox>

            <!-- Search bar -->
            <TextField prefWidth="300" promptText="Search tasks" />

            <!-- Tasks List -->
            <VBox spacing="15">
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label style="-fx-font-size: 22;" text="★" />
                    <VBox>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Activity 1" />
                        <Label style="-fx-text-fill: #666; -fx-font-size: 14;" text="ojhdfilusuhfliwsyhf" />
                    </VBox>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label style="-fx-font-size: 22;" text="⬣" />
                    <VBox>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Developing" />
                        <Label style="-fx-text-fill: #666; -fx-font-size: 14;" text="afsfsfgrfsefrsfrsef" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- Right Appointments Panel -->
    <right>
        <VBox spacing="12" style="-fx-background-color: #ffffff; -fx-padding: 25;">
            <HBox alignment="CENTER_RIGHT">
                <Label style="-fx-font-weight: bold; -fx-font-size: 20;" text="Appointments" />
            </HBox>
            <Button style="-fx-background-color: #5C3B8C; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 16;" text="+ Add appointment" />

            <VBox spacing="12" style="-fx-padding: 10;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="15 October" />
                <Label style="-fx-font-size: 14;" text="09:00 - Marketing: 5 posts on Instagram" wrapText="true" />
                <Label style="-fx-font-size: 14;" text="11:00 - Work: Platform Concept" wrapText="true" />

                <Label style="-fx-font-weight: bold; -fx-font-size: 16; -fx-padding: 10 0 0 0;" text="16 October" />
                <Label style="-fx-font-size: 14;" text="09:00 - Design: Sleep App" wrapText="true" />
                <Label style="-fx-font-size: 14;" text="15:00 - Animation: Create Post for App" wrapText="true" />
            </VBox>
        </VBox>
    </right>

</BorderPane>